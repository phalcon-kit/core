{
  "name": "phalcon-kit/core",
  "type": "library",
  "description": "Build high-performance PHP applications faster with Phalcon Kit â€” a modular developer toolkit that extends the Phalcon framework.",
  "keywords": [
    "php",
    "framework",
    "php-framework",
    "phalcon",
    "phalcon-php",
    "phalcon-kit",
    "phalcon-kit-core",
    "phalcon-toolkit"
  ],
  "homepage": "https://github.com/phalcon-kit",
  "license": "BSD-3-Clause",
  "authors": [
    {
      "name": "Julien Turbide",
      "email": "contact@jturbide.com",
      "homepage": "https://www.jturbide.com/"
    },
    {
      "name": "Contributors",
      "homepage": "https://github.com/phalcon-kit/core/graphs/contributors"
    }
  ],
  "funding": [
    {
      "type": "github",
      "url": "https://github.com/sponsors/jturbide"
    }
  ],
  "support": {
    "issues": "https://github.com/phalcon-kit/core/issues",
    "source": "https://github.com/phalcon-kit/core"
  },
  "config": {
    "optimize-autoloader": true,
    "apcu-autoloader": true,
    "apcu-autoloader-prefix": "phalcon-kit-",
    "preferred-install": "dist",
    "sort-packages": true,
    "allow-plugins": {
      "cweagans/composer-patches": true,
      "php-http/discovery": true
    }
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "require": {
    "php": ">=8.4",
    "ext-intl": "*",
    "ext-json": "*",
    "ext-mbstring": "*",
    "ext-pdo": "*",
    "ext-phalcon": ">=5.9.3",
    "ext-sodium": "*",
    "docopt/docopt": "^1.0.6",
    "league/flysystem": "^3.31.0",
    "league/fractal": "^0.20.2",
    "phalcon/incubator-mailer": "^3.0.0",
    "vlucas/phpdotenv": "^5.6.3"
  },
  "suggest": {
    "ext-apcu": "*",
    "ext-bcmath": "*",
    "ext-imap": "*",
    "ext-redis": "*",
    "ext-simplexml": "*",
    "ext-sockets": "*",
    "ext-swoole": "*",
    "ext-zend-opcache": "*",
    "aws/aws-sdk-php": "^3.369.24",
    "cweagans/composer-patches": "^2.0.0",
    "fakerphp/faker": "^1.24.1",
    "google/recaptcha": "^1.3.1",
    "guzzlehttp/guzzle": "^7.10.0",
    "jetbrains/phpstorm-attributes": "^1.2",
    "joshtronic/php-loremipsum": "^2.1.0",
    "league/csv": "^9.28.0",
    "league/oauth2-client": "^2.9.0",
    "league/oauth2-facebook": "^2.2.0",
    "league/oauth2-github": "^3.1.1",
    "league/oauth2-google": "^4.1.0",
    "league/oauth2-instagram": "^3.1.0",
    "league/oauth2-linkedin": "^5.1.2",
    "openai-php/client": "^0.19.0",
    "phalcon/ide-stubs": "^5.9.3",
    "php-imap/php-imap": "^5.0.1",
    "saggre/phpdocumentor-markdown": "^1.0.0",
    "shuchkin/simplexlsxgen": "^1.5.12",
    "spatie/array-to-xml": "^3.4.4",
    "thiagoalessio/tesseract_ocr": "^2.13.0",
    "xenolope/quahog": "^3.0.0"
  },
  "require-dev": {
    "ext-apcu": "*",
    "ext-bcmath": "*",
    "ext-gd": "*",
    "ext-imap": "*",
    "ext-redis": "*",
    "ext-simplexml": "*",
    "ext-sockets": "*",
    "ext-swoole": "*",
    "ext-zend-opcache": "*",
    "aws/aws-sdk-php": "^3.369.24",
    "cweagans/composer-patches": "^2.0.0",
    "fakerphp/faker": "^1.24.1",
    "google/recaptcha": "^1.3.1",
    "guzzlehttp/guzzle": "^7.10.0",
    "jetbrains/phpstorm-attributes": "^1.2",
    "joshtronic/php-loremipsum": "^2.1.0",
    "league/csv": "^9.28.0",
    "league/oauth2-client": "^2.9.0",
    "league/oauth2-facebook": "^2.2.0",
    "league/oauth2-github": "^3.1.1",
    "league/oauth2-google": "^4.1.0",
    "league/oauth2-instagram": "^3.1.0",
    "league/oauth2-linkedin": "^5.1.2",
    "openai-php/client": "^0.19.0",
    "phalcon/ide-stubs": "^5.9.3",
    "php-imap/php-imap": "^5.0.1",
    "saggre/phpdocumentor-markdown": "^1.0.0",
    "shuchkin/simplexlsxgen": "^1.5.12",
    "spatie/array-to-xml": "^3.4.4",
    "thiagoalessio/tesseract_ocr": "^2.13.0",
    "xenolope/quahog": "^3.0.0"
  },
  "autoload": {
    "psr-4": {
      "PhalconKit\\": "src/"
    },
    "files": [
      "src/Functions/Dump.php",
      "src/Functions/Array.php",
      "src/Functions/Sprintf.php"
    ]
  },
  "autoload-dev": {
    "psr-4": {
      "PhalconKit\\Tests\\Unit\\": "tests/Unit"
    }
  },
  "extra": {
    "patches": {
      "phalcon/ide-stubs": {
        "Phalcon\\Mvc\\Model": "patches/phalcon-mvc-model.patch",
        "Phalcon\\Mvc\\ModelInterface": "patches/phalcon-mvc-model-interface.patch",
        "Phalcon\\Mvc\\EntityInterface": "patches/phalcon-mvc-entity-interface.patch"
      }
    }
  },
  "archive": {
    "exclude": [
      "/.github",
      "/.phalcon",
      "/.phpunit.cache",
      "/tests",
      "CHANGELOG.md",
      "codeception.yml",
      "phpcs.xml",
      "phpcs.xml.dist",
      "phpstan.neon",
      "phpstan.neon.dist",
      "phpunit.xml",
      "phpunit.xml.dist",
      "psalm.xml",
      "psalm.xml.dist"
    ]
  },
  "bin": [
    "phalcon-kit"
  ],
  "scripts": {
    "docker": "docker-compose up",
    "skeleton": "./bin/skeleton.sh validate ./",
    "phpunit": "./bin/phpunit.sh",
    "psalm": "./bin/psalm.sh",
    "php-cs-fixer": "./bin/php-cs-fixer.sh",
    "phpcs": "./bin/phpcs.sh",
    "phpcbf": "./bin/phpcbf.sh",
    "docs": "phpDocumentor -c phpdoc.xml"
  }
}
